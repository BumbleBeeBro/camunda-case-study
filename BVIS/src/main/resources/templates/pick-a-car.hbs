  <h2 class="bvis-1 title">Pick a car</h2>
  <table class="table car-list">
    {{#each cars}}
    <tr>
      <td class="image"><img src="/images/{{image}}"></td>
      <td class="name">{{name}}</td>
      <td class="price">â‚¬{{pricePerDay}} <small>per day</small></td>
      <td class="select">
